program Siri;
uses crt;
var
name: String;
year,count: Integer;
vopros,w: String;

procedure ask(question:string);
begin
case question of
'Сколько тебе лет?': writeln('Я же отвечала, ', year + 1);
'Сколько тебе лет': writeln('Я же отвечала, ', year + 1);
'Кто тебя создал?': writeln('Савинов Кирилл, 8 "Б"');
'Кто тебя создал': writeln('Савинов Кирилл, 8 "Б"');
'Как дела?': writeln('Отлично, а у тебя?');
else
    begin
    writeln('Я тебя не понимаю =(');
    writeln('Задай другой вопрос!');
    end;
end;

end;

begin
writeln('Привет, я программа которая отвечает на вопросы.');
writeln('Меня зовут Сири, да-да мое имя такое же как у той программы из Apple...');
writeln('Вообщем не важно, а тебя как зовут?');
readln(name);

if name = ('Сергей') then
    writeln('Привет,', name)
    else
        if name = ('Кирилл') then
            writeln('Привет,', name)
        else
            if name = ('Кирил') then
                begin
                    writeln('Как тебе не стыдно! Ты не правильно написал свое имя!');
                    writeln('Кирилл с двумя "л", будь внимательнее');
                    writeln('Привет, Кирилл');
                end
            else
                if name = ('') then
                    writeln('Привет,', name)
                else
                    if name = ('Артем') then
                        writeln('Привет,', name)
                    else
                        if name = ('Денис') then
                            writeln('Привет,', name)
                        else
                            if name = ('Тимур') then
                                writeln('Привет,', name)
                            else
                                if name = ('Александр') then
                                    writeln('Привет,', name)
                                else
                                    if name = ('Саня') then
                                        writeln('Привет бандит ', name)
                                    else
                                        if name = ('Анатолий') then
                                            writeln('Привет,', name)
                                        else
                                            if name = ('Антон') then
                                                writeln('Привет,', name)
                                            else
                                                begin
                                                    writeln('Странное у тебя имя... Либо у меня база данных имен хромает ');
                                                    writeln('Привет, ', name);
                                                end;

writeln('Сколько тебе лет?');
readln(year);
    if year = 18 then writeln('Ого какой большой');
writeln('А мне ', year + 1);
writeln('Задай мне вопрос.');
count:=0;
while count=0 do
begin
readln(vopros);
ask(vopros);
end;
end.
